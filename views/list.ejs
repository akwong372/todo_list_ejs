<%- include('header') -%>
    <div class="box" id="heading">
        <h1><%= kindOfDay %></h1>
    </div>

    <div class="box" id="todoList">
        <% todos.forEach( todo => { %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="checkItem" id="checkItem">
                    <p><%= todo.name %></p>
                </div>
            </form>
        <% }) %>
        <form class="item" action="/" method="POST">
            <input type="text" name="newListItem" id="newListItem" placeholder="new item" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>
<%- include('footer') -%>